        </div>
        <section class="folder-content">
            <table>
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Created</th>
                    <th scope="col">File size</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <th scope="row">Anteckningar</th>
                    <th scope="row">You</th>
                    <th scope="row">2025-10-21</th>
                    <th scope="row">
                        <div>
                            <p>Edit</p>
                        </div>
                    </th>
                </tr>



                </tbody>
            </table>
        </section>
    </main>


    <div class="pop-up-box new-folder">
        <svg class="close" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#000000"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg>
        <form method="post" action="/home/new-folder" class="new-folder-form">
            <label for="name">New Folder</label>
            <div class="input-box">
                <input type="text" id="name" name="foldername" placeholder="Nameless folder">
            </div>
            <%if (errors && errors.length > 0) {%>
                <% const error = errors.find(err => err.path ==='foldername');%>
                <% if (error) {%>
                    <span class="error-msg"><%= error.msg%></span>
                <%} else {%>
                    <span class="error-msg"></span>
                <%}%>
            <%}%>

            <button type="submit">Create</button>
        </form>
    </div>

