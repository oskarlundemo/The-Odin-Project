


<!doctype html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body>


<%- include('./partials/nav.ejs')%>



<div class="blogs-container">
    <h2>All blogs</h2>

    <div class="blog-grid">



        <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %> <!-- Correct forEach syntax -->
                <div class="blog-card">
                    <a class="single" href="/blogs/<%= blog.id%>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet%></p>
                    </a>
                </div>
            <%})%>

        <%}%>


    </div>
</div>


<%- include('./partials/footer.ejs')%>


</body>
</html>